<UserControl x:Class="DataWranglerInterface.ShotRecording.DataWranglerFileSourceUIDecorator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataWranglerInterface.ShotRecording"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Border BorderBrush="LightGray" BorderThickness="1"/>
		<StackPanel>
			<DockPanel>
				<Label x:Name="FileSourceMeta"></Label>
				<Button x:Name="RemoveMetaButton" HorizontalAlignment="Right">❌</Button>
			</DockPanel>
			<Grid x:Name="ContentContainer">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"></ColumnDefinition>
					<ColumnDefinition Width="2*"></ColumnDefinition>
				</Grid.ColumnDefinitions>
			</Grid>
		</StackPanel>
	</Grid>
</UserControl>
