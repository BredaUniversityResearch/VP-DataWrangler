<Window x:Class="DataWranglerInterface.ShotRecording.ProvideBluetoothPairingCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataWranglerInterface.ShotRecording"
        mc:Ignorable="d"
        Title="ProvideBluetoothPairingCodeWindow" Height="104" Width="300">
    <StackPanel>
		<Label>Device requested pairing code</Label>
		<Label x:Name="DeviceName">Hello world</Label>
		<TextBox x:Name="PairingCodeInput" />
        <Button x:Name="SubmitButton">Submit</Button>
    </StackPanel>
</Window>
