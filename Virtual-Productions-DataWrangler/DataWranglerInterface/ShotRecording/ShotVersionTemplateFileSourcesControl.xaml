<UserControl x:Class="DataWranglerInterface.ShotRecording.ShotVersionTemplateFileSourcesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataWranglerInterface.ShotRecording"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
        <Grid.RowDefinitions>
			<RowDefinition Height="26"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
		<DockPanel Grid.Row="0">
			<Label>Shot Version Template</Label>
			<Button x:Name="AddFileSourceButton" HorizontalAlignment="Right" VerticalAlignment="Center" Height="21" Width="40" Click="AddFileSourceButton_Click">Add</Button>
        </DockPanel>
		<ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
			<StackPanel x:Name="FileSourceControl">
			</StackPanel>
		</ScrollViewer>
    </Grid>
</UserControl>
