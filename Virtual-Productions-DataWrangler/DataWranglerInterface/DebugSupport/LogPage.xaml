<Page x:Class="DataWranglerInterface.DebugSupport.LogPage"
      x:Name="LogPageInstance"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataWranglerInterface"
      xmlns:debugSupport="clr-namespace:DataWranglerInterface.DebugSupport"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid>
		<DataGrid x:Name="LogOutput" VerticalScrollBarVisibility="Visible" ItemsSource="{Binding ElementName=LogPageInstance, Path=Messages}" d:DataContext="{d:DesignInstance Type={x:Type debugSupport:LogMessage}}" AutoGenerateColumns="False" CanUserResizeRows="False" CanUserDeleteRows="False" CanUserAddRows="False" AlternatingRowBackground="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" >
            <DataGrid.Columns>
				<DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="1*"></DataGridTextColumn>
				<DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="1*"></DataGridTextColumn>
				<DataGridTextColumn Header="Message"  Binding="{Binding Message}" Width="7*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
